<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Màu khi được chọn -->
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#000000"/> <!-- Viền -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu khi không được chọn -->
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#000000"/> <!-- Viền -->
        </shape>
    </item>
</selector>
