<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền trong suốt -->
    <solid android:color="@android:color/transparent" />

    <!-- Viền với độ dày 1dp và màu xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" />

    <!-- Bo góc với bán kính 8dp -->
    <corners android:radius="8dp" />

    <!-- Khoảng cách giữa nội dung và viền -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
