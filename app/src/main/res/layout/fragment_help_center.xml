<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout_help"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/background_color">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="fpl.md37.genz_fashion.UserScreen.HelpCenterFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/btnBack_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconout"
            android:contentDescription="Back Button"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Center"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Search Suppliers"
            android:background="@drawable/search" />

    </LinearLayout>

    <!-- Contact Us Title -->
    <TextView
        android:id="@+id/contactUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Câu hỏi thường gặp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="16dp"/>

    <!-- Customer Service Item -->
    <LinearLayout
        android:id="@+id/customerServiceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackground"
        >



        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Làm cách nào để đặt hàng ?"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:alpha="0.5" />
        <TextView
            android:id="@+id/b"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tôi có thể hủy đơn hàng không ? "
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:alpha="0.5" />
        <TextView
            android:id="@+id/c"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Chính sách đổi trả của shop như thế nào  ?"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:alpha="0.5" />
        <TextView
            android:id="@+id/d"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Phương thức thanh toán nào được chấp nhận ?"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:alpha="0.5" />




    </LinearLayout>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Các kênh liên hệ khác"
        android:textSize="20sp"

        android:layout_marginStart="16dp"/>


    <!-- Zalo Item -->
    <LinearLayout
        android:id="@+id/whatsappItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
     >

        <ImageView
            android:id="@+id/whatsappIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/zalo" />

        <TextView
            android:id="@+id/whatsappText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Zalo"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Facebook Item -->
    <LinearLayout
        android:id="@+id/facebookItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
      >

        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/fb" />

        <TextView
            android:id="@+id/facebookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Facebook"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Instagram Item -->
    <LinearLayout
        android:id="@+id/instagramItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
       >

        <ImageView
            android:id="@+id/instagramIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ins" />

        <TextView
            android:id="@+id/instagramText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Instagram"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
</FrameLayout>